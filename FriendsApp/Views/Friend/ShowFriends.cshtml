@model List<FriendsApp.Models.FriendModel>
@{
    ViewData["Title"] = "ShowFriends";
}

<h2>Show all Friends</h2>

<table border="1" width="60%">
    <tr>
        <th>Friend ID.</th>
        <th>Friend Name</th>
        <th>Place</th>
        <th></th>  
    </tr>
    @{ 
        int i = 0;
        @foreach(FriendModel m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Ime</td>
                <td>@m.MestoZiveenje</td>
                <td>
                    @Html.ActionLink("Edit", "UpdateFriend", new { id = i })
                    <br />
                    @Html.ActionLink("Delete", "DeleteFriend", new { id = i })
                </td>
            </tr>
            i++;
        }
    }

</table>

